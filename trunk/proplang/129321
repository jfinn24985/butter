      end
      comment "# jam file for text-to-tags (t2t) program

rule t2t
{
  local man_ = $(1:S=.man) ;
  local src_ = $(2) ;
  Depends all : $(man_) ;
  MakeLocate $(man_) : $(LOCATE_TARGET) ;
  SEARCH on $(src_) = $(SEARCH_SOURCE) ;
  run_t2t $(man_) : $(src_) ;
  Clean clean : $(man_) ;
}

actions ignore run_t2t
{
  txt2tags  $(T2TFLAGS) -t man -o $(1) -i $(2)
}
"
    end

    artifact 131881 "t2t.bjam"
      stereotype "document"
      associated_artifacts
      end
      comment "import type ;
import generators ;
import feature  ;
import toolset ;
import make ;

type.register TEXT2TAGS : t2t ;

# generators.register-standard t2t : TEXT2TAGS : MAN ;

feature.feature t2tflags : : free ;

toolset.flags t2t-action OPTIONS <t2tflags> ;

rule t2t ( name : source  : requirements * )
{
  make $(name) : $(source) : @t2t-action : $(requirements) ;
}

actions t2t-action
{
  txt2tags $(OPTIONS) -toc -t man -o $(<) $(>)
}
"
    end

    artifact 132009 "t2t.make"
