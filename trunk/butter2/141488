@target_name@$(SUFOBJ) :: C++FLAGS:=... $(@TARGET_NAME@INCLUDE) ...
@target_name@$(SUFOBJ) :: $(@TARGET_NAME@SRC) | $(@TARGET_NAME@DINC) 
