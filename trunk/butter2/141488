@target_name@$(SUFLIB) :: CFLAGS:=... $(@TARGET_NAME@INCLUDE) $(VARIANTFLAGS) ...
@target_name@$(SUFLIB) :: C++FLAGS:=... $(@TARGET_NAME@INCLUDE) ...
