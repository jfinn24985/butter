	ADDITIONAL_MAKE_CLEAN_FILES ${DOC_PROGRAM_HTML})
add_custom_target (${DOC_PROGRAM_HTML}_TARGET ALL
	DEPENDS ${DOC_PROGRAM_HTML})
install (FILES ${DOC_PROGRAM_HTML}
	DESTINATION ${HTML}
	CONFIGURATIONS Release)

##END:target program.html
