if $(NT)
{
OPENMP = /openmp ;
FORTRAN = fortran ;
FORTRANLIBS = vcf2c.lib ;
LINK = $(CC) ;
}
else if $(UNIX)
{
OPENMP = -fopenmp ;
FORTRANLIBS = -lgfortran ;
FORTRAN = gfortran ;
}
##START:version
#Butter version 1.2beta.175
##END:version
##START:date
#Tue Oct 31 23:56:47 2017
##END:date
##START:preamble
BUILDDIR = build ;
SubDir TOP ;
OUTPUTDIR = $(BUILDDIR)$(SLASH)$(VARIANT) ;
HDRS += include/exe include ;
LINKFLAGS += $(OPENMP) ;
C++FLAGS += -DPROJ_FLAG ;
CCFLAGS += -DPROJ_FLAG ;
##END:preamble
##START:close
SubInclude TOP doc ;
SubInclude TOP src ;
##END:close
