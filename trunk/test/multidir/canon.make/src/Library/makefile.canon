##START:preamble
include $(ROOTDIR)/M_sys.mak

LOCALHDRS:=$(USERHDRS)
LOCALFLAGS:=$(USERFLAGS)
LOCALLDFLAGS:=$(USERLDFLAGS)

##END:preamble
##START:target library
LIBRARYSRC :=  \
	example_lib.cpp
LIBRARY_DINC := $(filter %$(sufdep), $(LIBRARYSRC:.cpp=$(sufdep))) $(filter %$(sufdep), $(LIBRARYSRC:.c=$(sufdep)))
-include $(LIBRARY_DINC)
LIBRARY_OBJ+=$(filter %$(sufobj), $(LIBRARYSRC:.cpp=$(sufobj)))
USEROBJ+=$(LIBRARY_OBJ)

liblibrary$(suflib) : $(LIBRARY_OBJ) $(LIBRARY_DINC)
	$(AR) $(ARFLAGS) $(arc_file)liblibrary$(suflib) $(LIBRARY_OBJ)

all :: liblibrary$(suflib)
TARGETS+=liblibrary$(suflib)

install:: liblibrary$(suflib)
	$(INSTALL) -d $(LIBDIR)
	$(INSTALL) $(LIBIFLAGS) liblibrary$(suflib) $(LIBDIR)/liblibrary$(suflib)
##END:target library
